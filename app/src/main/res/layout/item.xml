<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/cardview_dark_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="100dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#7FD7FB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:outlineSpotShadowColor="@color/cardview_dark_background"
                android:layout_height="wrap_content">
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="200dp"
                     android:id="@+id/imageView"
                     android:src="@drawable/ic_baseline_supervisor_account_24"
                     />
                <TextView
                    android:id="@+id/txtnames"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_margin="10dp"
                    android:text="Persons Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="Time Stamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_video_library_24"
                android:id="@+id/vdoImage"
                android:outlineSpotShadowColor="@color/cardview_dark_background"
                android:layout_width="40dp"
                android:outlineAmbientShadowColor="@color/cardview_shadow_end_color"
                android:layout_height="40dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>